{
  "version": 2,
  "builds": [
    {
      "src": "./app.js",
      "use": "@vercel/node",
      "config": {
        "buildCommand": "npm install && npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/build/(.*)",
      "dest": "/build/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/app.js"
    }
  ],  
  "rewrites": [
    { "source": "/(.*)", "destination": "/" }
  ],
  "env": {
    "PORT": "3000",
    "FAKESTORE": "https://fakestoreapi.com"
  }
}
