{
  "version": 2,
  "builds": [
    {
      "src": "./app.js",
      "use": "@vercel/node",
      "config": {
        "buildCommand": "npm install && npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/handleRequest"
    }
  ],
  "functions": {
    "api/handleRequest": {
      "runtime": "nodejs"
    }
  },
  "env": {
    "PORT": "3000",
    "FAKESTORE": "https://fakestoreapi.com"
  }
}